<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('./inc/head') %>
  </head>
  <div class="container">
    <div class="row">
      <div class="col-sm">
        <body>
          <%-include('./inc/nav') %>
          <section>
            <br />
            <br />
            <br />
            <a href="/admin/add">Yeni YazÄ± Ekle</a>
            <h1>Yazilar</h1>
            <ul>
              <% blogs.forEach(blog => { %>
              <li>
                <p><%=blog.title%></p>
                <a class="del" data-doc="<%=blog._id%>">Sil</a>
              </li>

              <% }) %>
            </ul>
          </section>
          <script>
            const del = document.querySelectorAll("a.del");
            const delLinks = [].slice.call(del);
            delLinks.forEach((item, i) => {
              item.addEventListener("click", (e) => {
                const endpoint = `/admin/delete/${item.dataset.document}`;
              });

              fetch(endpoint, {
                method: "DELETE",
              })
                .then((response) => {
                  response.json();
                })
                .then((data) => {
                  window.location.href = data.link;
                })
                .catch((err) => {
                  console.log(err);
                });
            });
          </script>
        </body>
      </div>
    </div>
  </div>
</html>
